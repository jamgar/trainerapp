<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>no</th>
        <th>Title</th>
        <th>Workout Date</th>
        <th>Type</th>
        <th>View</th>
      </tr>
    </thead>
    <tbody>
      <% @workouts.each_with_index do |workout, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= workout.title %></td>
        <td><%= workout.workout_date %></td>
        <td><%= Workout.types.keys[workout.type_id].capitalize %></td>
        <td><%= link_to workout_path(workout), class: 'badge badge-success text-center' do %>
          <%= image_tag "svg/arrow-circle-right.svg", alt: "View", class: 'icon text-light' %>
        <% end %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
